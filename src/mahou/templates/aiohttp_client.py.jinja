TSuccess = TypeVar('TSuccess')
TError = TypeVar('TError')


class Success(Generic[TSuccess]):
    def __init__(self, code: int, result: TSuccess):
        self.code = code
        self.result: TSuccess = result


class Error(Generic[TError]):
    def __init__(self, code: int, result: TError):
        self.code = code
        self.result: TError = result


def success(maybe: Success | Error) -> StrictTypeGuard[Success]:
    return isinstance(maybe, Success)


